<html>
<head>
  <title>Register for VOTIVE</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/landing.css">
</head>
<body>
  <div id="container">
    <div id="form">
      <h1>VOTIVE</h1>
      <%if(warning===true){%><span id="warning">Invalid. Try again.</span><%}%>
        <form action="/register" method="post">
          <input type="text" placeholder="snazzy username" name="username" autofocus required />
          <input type="password" placeholder="secret password" name="password" required />
          <input type="submit"><button id="submit">JOIN US</button></input>
        </form>
      <h2><a href="/login">log in</a></h2><br />
    </div>
  </div>
  <% include ../static/includes/demofooter.ejs %>
</body>
</html>
